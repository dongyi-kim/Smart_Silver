<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_weight=".15"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/text_discription"
            android:src="@drawable/discription_01_04_even"
            android:layout_marginTop="20sp" />


        <LinearLayout
            android:layout_weight=".85"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:id="@+id/drawfield"
            android:background="@drawable/drawfield_01_04"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginBottom="20sp">


            <include layout="@layout/view_round_button_layout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/drawfield_row_1"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="5sp"/>

            <include layout="@layout/view_round_button_layout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/drawfield_row_2"
                android:layout_marginRight="20sp"/>

            <include layout="@layout/view_round_button_layout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/drawfield_row_3"
                android:layout_marginLeft="20sp"/>

            <include layout="@layout/view_round_button_layout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/drawfield_row_4"
                android:layout_marginRight="20sp"/>

            <include layout="@layout/view_round_button_layout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/drawfield_row_5"
                android:layout_marginLeft="20sp"
                android:layout_marginBottom="5sp"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>