<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_chalkboard_2">

    <LinearLayout
        android:layout_width="@dimen/wp150"
        android:layout_height="@dimen/wp100"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/wp20"
            android:gravity="center"
            android:text="빈 항아리에 물을 채우려면\n몇 번 부어야 할까요."
            android:textColor="#FFFFFF"
            android:textSize="@dimen/wp6"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/wp60"
            android:layout_gravity="center"
            android:background="@drawable/frame_cell_white"
            android:gravity="center"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="@dimen/wp35"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/wp15"
                        android:layout_marginTop="@dimen/wp3"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/ibtn_pot_small"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/wp30"
                            android:layout_gravity="center"
                            android:background="@null"
                            android:scaleType="fitCenter"
                            android:src="@drawable/icon_small_pot" />

                        <TextView
                            android:id="@+id/txt_small_pot_capacity"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/wp10"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="1되"
                            android:textColor="#FFFFFFFF"
                            android:textSize="@dimen/wp8"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="@dimen/wp50"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="@dimen/wp50"
                            android:layout_height="@dimen/wp58"
                            android:layout_gravity="center">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="fitCenter"
                                android:src="@drawable/icon_empty_pot" />

                            <ImageView
                                android:id="@+id/img_water_in_pot"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/wp58"
                                android:layout_gravity="bottom"
                                android:scaleType="fitCenter"
                                android:src="@drawable/img_water_in_pot" />
                        </FrameLayout>
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:layout_width="@dimen/wp50"
                    android:layout_height="@dimen/wp10"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/wp20"
                    android:scaleType="fitXY"
                    android:src="@drawable/arrow_pot_small_to_big" />

                <TextView
                    android:id="@+id/txt_big_pot_capacity"
                    android:layout_width="@dimen/wp20"
                    android:layout_height="@dimen/wp10"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/wp50"
                    android:layout_marginTop="@dimen/wp18"
                    android:text="12되"
                    android:textColor="#FFFFFFFF"
                    android:textSize="@dimen/wp8"
                    android:textStyle="bold" />
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/wp20"
            android:layout_marginTop="@dimen/wp2"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_answer_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10sp"
                android:layout_weight="1"
                android:text="1"
                android:textSize="@dimen/wp7"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_answer_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10sp"
                android:layout_weight="1"
                android:text="2"
                android:textSize="@dimen/wp7"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_answer_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10sp"
                android:layout_weight="1"
                android:text="3"
                android:textSize="@dimen/wp7"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="@dimen/wp16"
        android:layout_height="@dimen/wp8"
        android:layout_gravity="center"
        android:background="@drawable/img_memo_sticker"
        android:gravity="center"
        android:text="5 - 3"
        android:textSize="@dimen/wp4" />
</RelativeLayout>