<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent" android:background="@drawable/img_wall">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/wp5"
        android:gravity="center_horizontal">

        <ui.ChalkFrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.15"
                    android:text="아래에 나타난 그림이\n총 몇개 일까요?"
                    android:id="@+id/text_discription"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/wp10"
                    android:gravity="center"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/wp90"
                    android:orientation="vertical"
                    android:id="@+id/drawfield"
                    android:layout_gravity="center"
                    android:gravity="center">


                    <include layout="@layout/view_round_button_layout"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:id="@+id/drawfield_row_1"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginTop="5sp"/>

                    <include layout="@layout/view_round_button_layout"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:id="@+id/drawfield_row_2"/>

                    <include layout="@layout/view_round_button_layout"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:id="@+id/drawfield_row_3"/>

                    <include layout="@layout/view_round_button_layout"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:id="@+id/drawfield_row_4"/>

                </LinearLayout>

            </LinearLayout>



        </ui.ChalkFrameLayout>



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/wp30">
            <Button
                android:layout_weight="1"
                android:textSize="@dimen/wp15"
                android:textStyle="bold"
                android:layout_margin="10sp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="1"
                android:id="@+id/btn_answer_1"/>

            <Button
                android:layout_weight="1"
                android:textSize="@dimen/wp15"
                android:textStyle="bold"
                android:layout_margin="10sp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="2"
                android:id="@+id/btn_answer_2" />

            <Button
                android:layout_weight="1"
                android:textSize="@dimen/wp15"
                android:textStyle="bold"
                android:layout_margin="10sp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="3"
                android:id="@+id/btn_answer_3" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>