<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_chalkboard_2">

    <LinearLayout
        android:layout_width="@dimen/wp150"
        android:layout_height="@dimen/wp100"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_discription"
            android:layout_width="match_parent"
            android:layout_height="@dimen/wp20"
            android:gravity="center"
            android:text=" 더하기 빼기 O, X 퀴즈\n다음 더하기 빼기가 맞으면 O, 틀리면 X를 누르세요."
            android:textColor="#FFFFFF"
            android:textSize="@dimen/wp6"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="@dimen/wp130"
            android:layout_height="@dimen/wp40"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/wp10"
            android:background="@drawable/frame_cell_white"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="5">

            <TextView
                android:id="@+id/txt_operand_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/wp10"
                android:layout_weight="1"
                android:gravity="center"
                android:text="1"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/wp10"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_operator"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="+"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/wp10"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_operand_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="1"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/wp10"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_equal_sign"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="="
                android:textColor="#FFFFFF"
                android:textSize="@dimen/wp10"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_answer"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/wp10"
                android:layout_weight="1"
                android:gravity="center"
                android:text="2"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/wp10"
                android:textStyle="bold" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/wp22"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/wp10"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_answer_isRight"
                android:layout_width="@dimen/wp40"
                android:layout_height="match_parent"
                android:layout_margin="10sp"
                android:text="O"
                android:textSize="@dimen/wp10"
                android:textStyle="bold" />

            <View
                android:layout_width="@dimen/wp15"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/btn_answer_isFalse"
                android:layout_width="@dimen/wp40"
                android:layout_height="match_parent"
                android:layout_margin="10sp"
                android:text="X"
                android:textSize="@dimen/wp10"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>


    <TextView
        android:layout_width="@dimen/wp20"
        android:layout_height="@dimen/wp10"
        android:layout_gravity="center"
        android:background="@drawable/img_memo_sticker"
        android:gravity="center"
        android:text="2 - 2"
        android:textSize="@dimen/wp5" />
</RelativeLayout>