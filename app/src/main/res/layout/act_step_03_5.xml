<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_chalkboard_2">

    <LinearLayout
        android:layout_width="@dimen/wp150"
        android:layout_height="@dimen/wp100"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_description"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/wp20"
            android:gravity="center"
            android:text="아래 그림은 할아버지와 할머니가 오늘\n데이트에 쓴 돈 입니다. 오늘 쓴 돈은 모두 얼마입니까?"
            android:textColor="#FFFFFFFF"
            android:textSize="@dimen/wp5" />


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/wp60"
            android:layout_gravity="center"
            android:background="@drawable/frame_cell_white">

            <!-- first frame -->
            <LinearLayout
                android:id="@+id/linear_frame_1_to_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="@dimen/wp50"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_pay_money"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/wp40"
                        android:background="@drawable/background_white_transparent"
                        android:src="@drawable/icon_paper_meoney_50000" />

                    <TextView
                        android:id="@+id/txt_pay_description"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/wp12"
                        android:background="@drawable/my_rounded_corner"
                        android:gravity="center"
                        android:text="낸 돈 50,000"
                        android:textColor="#FF000000"
                        android:textSize="@dimen/wp5" />
                </LinearLayout>

                <TextView
                    android:layout_width="@dimen/wp20"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="―"
                    android:textColor="#EEFFFFFF"
                    android:textSize="@dimen/wp15"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="@dimen/wp50"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/img_spend_1"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/wp40"
                            android:background="@drawable/background_white_transparent"
                            android:src="@drawable/icon_grandma" />

                        <TextView
                            android:id="@+id/txt_spend_decription_1"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/wp12"
                            android:background="@drawable/my_rounded_corner"
                            android:gravity="center"
                            android:text="입장권\n15,000"
                            android:textSize="@dimen/wp5" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear_spend_1_2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/img_spend_2"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/wp40"
                            android:background="@drawable/background_white_transparent"
                            android:src="@drawable/icon_grandfa" />

                        <TextView
                            android:id="@+id/txt_spend_decription_2"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/wp12"
                            android:background="@drawable/my_rounded_corner"
                            android:gravity="center"
                            android:text="입장권\n15,000"
                            android:textSize="@dimen/wp5" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <!-- -->

            <!--second frame -->
            <LinearLayout
                android:id="@+id/linear_frame_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="@dimen/wp18"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/wp40"
                        android:background="@drawable/background_white_transparent"
                        android:scaleType="fitCenter"
                        android:src="@drawable/icon_grandma" />

                    <TextView
                        android:id="@+id/txt_spend_1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/wp12"
                        android:background="@drawable/my_rounded_corner"
                        android:gravity="center"
                        android:text="입장권\n15,000"
                        android:textColor="#FF000000"
                        android:textSize="@dimen/wp5" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/wp18"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/wp40"
                        android:background="@drawable/background_white_transparent"
                        android:scaleType="fitCenter"
                        android:src="@drawable/icon_grandfa" />

                    <TextView
                        android:id="@+id/txt_spend_2"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/wp12"
                        android:background="@drawable/my_rounded_corner"
                        android:gravity="center"
                        android:text="입장권\n15,000"
                        android:textColor="#FF000000"
                        android:textSize="@dimen/wp5" />
                </LinearLayout>

                <TextView
                    android:layout_width="@dimen/wp18"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/wp3"
                    android:gravity="center"
                    android:text="+"
                    android:textColor="#EEFFFFFF"
                    android:textSize="@dimen/wp16"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="@dimen/wp18"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/wp40"
                        android:background="@drawable/background_white_transparent"
                        android:scaleType="fitCenter"
                        android:src="@drawable/icon_sundaeguk" />

                    <TextView
                        android:id="@+id/txt_spend_3"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/wp12"
                        android:background="@drawable/my_rounded_corner"
                        android:gravity="center"
                        android:text="순대국\n3,000"
                        android:textColor="#FF000000"
                        android:textSize="@dimen/wp5" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/wp18"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/wp40"
                        android:background="@drawable/background_white_transparent"
                        android:scaleType="fitCenter"
                        android:src="@drawable/icon_sundaeguk" />

                    <TextView
                        android:id="@+id/txt_spend_4"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/wp12"
                        android:background="@drawable/my_rounded_corner"
                        android:gravity="center"
                        android:text="순대국\n3,000"
                        android:textColor="#FF000000"
                        android:textSize="@dimen/wp5" />
                </LinearLayout>

                <TextView
                    android:id="@+id/txt_operator_1"
                    android:layout_width="@dimen/wp15"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/wp3"
                    android:gravity="center"
                    android:text="+"
                    android:textColor="#EEFFFFFF"
                    android:textSize="@dimen/wp16"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/linear_spend_2"
                    android:layout_width="@dimen/wp38"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/wp40"
                        android:background="@drawable/background_white_transparent"
                        android:scaleType="fitCenter"
                        android:src="@drawable/icon_coin_wallet" />

                    <TextView
                        android:id="@+id/txt_spend_5"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/wp12"
                        android:background="@drawable/my_rounded_corner"
                        android:gravity="center"
                        android:text="동전지갑 3,000"
                        android:textColor="#FF000000"
                        android:textSize="@dimen/wp5" />
                </LinearLayout>
            </LinearLayout>
            <!-- -->
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/wp20"
            android:layout_marginTop="@dimen/wp2"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_answer_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10sp"
                android:layout_weight="1"
                android:text="10,000원"
                android:textSize="@dimen/wp6"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_answer_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10sp"
                android:layout_weight="1"
                android:text="20,000원"
                android:textSize="@dimen/wp6"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_answer_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10sp"
                android:layout_weight="1"
                android:text="30,000원"
                android:textSize="@dimen/wp6"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="@dimen/wp16"
        android:layout_height="@dimen/wp8"
        android:layout_gravity="center"
        android:background="@drawable/img_memo_sticker"
        android:gravity="center"
        android:text="3 - 5"
        android:textSize="@dimen/wp4" />
</RelativeLayout>