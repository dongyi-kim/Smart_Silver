<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/img_chalkboard_2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="@dimen/wp150"
        android:layout_height="@dimen/wp100"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_discription"
            android:layout_height="@dimen/wp20"
            android:layout_width="match_parent"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:textStyle="bold"
            android:text="아래 그림은 날씨 예보입니다. 제주의 날씨는 어떻습니까?\n오른쪽 날씨 단추를 누르세요!"
            android:textSize="@dimen/wp6" />

        <LinearLayout
            android:background="@drawable/frame_cell_white"
            android:paddingTop="@dimen/wp1"
            android:layout_marginBottom="@dimen/wp2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/wp80"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_6_4"
                android:layout_width="@dimen/wp80"
                android:layout_height="@dimen/wp80"
                android:src="@drawable/map_weather_4_1" />

            <LinearLayout
                android:layout_width="@dimen/wp50"
                android:layout_height="match_parent"
                android:gravity="center"
                android:weightSum="1"
                android:orientation="vertical">

                <ImageButton
                    android:layout_width="@dimen/wp20"
                    android:layout_height="@dimen/wp20"
                    android:background="#00000000"
                    android:src="@drawable/btn_ans_sun"
                    android:id="@+id/btn_ans_1"/>

                <Button
                    android:layout_width="@dimen/wp30"
                    android:layout_height="@dimen/wp20"
                    android:text="0"
                    android:textSize="@dimen/wp6"
                    android:visibility="gone"
                    android:id="@+id/btn_ans_4"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".1"></LinearLayout>

                <ImageButton
                    android:layout_width="@dimen/wp20"
                    android:background="#00000000"
                    android:layout_height="@dimen/wp20"
                    android:src="@drawable/btn_ans_rain"
                    android:id="@+id/btn_ans_2"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".1"></LinearLayout>

                <ImageButton
                    android:layout_width="@dimen/wp20"
                    android:layout_height="@dimen/wp20"
                    android:src="@drawable/btn_ans_cloudy"
                    android:background="#00000000"
                    android:id="@+id/btn_ans_3"/>

                <Button
                    android:layout_width="@dimen/wp30"
                    android:layout_height="@dimen/wp20"
                    android:text="10"
                    android:textSize="@dimen/wp6"
                    android:visibility="gone"
                    android:id="@+id/btn_ans_5"
                    />


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="@dimen/wp16"
        android:layout_height="@dimen/wp8"
        android:layout_gravity="center"
        android:background="@drawable/img_memo_sticker"
        android:gravity="center"
        android:text="6 - 4"
        android:textSize="@dimen/wp4" />
</RelativeLayout>