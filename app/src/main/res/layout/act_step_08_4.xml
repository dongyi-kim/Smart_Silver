<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/img_chalkboard_2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="@dimen/wp150"
        android:layout_height="@dimen/wp100"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_description"
            android:layout_width="match_parent"
            android:layout_height="@dimen/wp20"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:text="다음 네모 안에 어떤 그림이 들어가야 할까요?"
            android:textStyle="bold"
            android:textSize="@dimen/wp6"
            />

        <LinearLayout
            android:layout_marginBottom="@dimen/wp2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/wp80"
            android:gravity="center"
            android:orientation="horizontal"
            android:background="@drawable/frame_cell_white"
            android:weightSum="1">

            <ImageView
                android:layout_width="@dimen/wp70"
                android:layout_height="@dimen/wp75"
                android:id="@+id/img"/>

            <LinearLayout
                android:layout_width="@dimen/wp70"
                android:layout_height="@dimen/wp75"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_1"
                    android:layout_width="@dimen/wp30"
                    android:layout_height="@dimen/wp20"
                    android:text="오전 8시"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:background="@drawable/borderline_clickable"
                    android:textSize="@dimen/wp6" />

                <LinearLayout
                    android:layout_width="@dimen/wp30"
                    android:layout_height="@dimen/wp10"></LinearLayout>

                <Button
                    android:id="@+id/btn_2"
                    android:textStyle="bold"
                    android:layout_width="@dimen/wp30"
                    android:layout_height="@dimen/wp20"
                    android:text="오후 8시"
                    android:gravity="center"
                    android:background="@drawable/borderline_clickable"
                    android:textSize="@dimen/wp6" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="@dimen/wp16"
        android:layout_height="@dimen/wp8"
        android:layout_gravity="center"
        android:background="@drawable/img_memo_sticker"
        android:gravity="center"
        android:text="8 - 4"
        android:textSize="@dimen/wp4" />
</RelativeLayout>