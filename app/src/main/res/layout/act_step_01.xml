<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <include layout="@layout/view_number_pad"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentBottom="true"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="아래의 숫자를 따라서\n입력하세요"
        android:id="@+id/text_discription"
        android:textSize="32dp"
        android:gravity="center"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="123456789\n111111111"
        android:id="@+id/text_answer_number"
        android:layout_below="@+id/text_discription"
        android:textSize="48dp"
        android:gravity="center"
        android:layout_marginTop="20dp" />

</RelativeLayout>