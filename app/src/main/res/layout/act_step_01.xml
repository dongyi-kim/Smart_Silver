<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/img_wall">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/wp5"
        android:gravity="center_horizontal">
        <ui.WhiteChalkFrameLayout
            android:layout_width="@dimen/wp90"
            android:layout_height="@dimen/wp25">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/wp10"
                    android:textStyle="bold"
                    android:text="스탭 1-1"/>
            </RelativeLayout>

        </ui.WhiteChalkFrameLayout>
        <ui.ChalkFrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/wp80"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="아래에 적힌 숫자들을\n따라서 입력하세요"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="@dimen/wp10"
                    android:id="@+id/txt_description"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/wp5"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:textSize="@dimen/wp10"
                        android:textStyle="bold"
                        android:text="123456789"
                        android:textColor="#FFFFFF"
                        android:id="@+id/txt_question"
                        android:layout_marginBottom="5dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:textSize="@dimen/wp10"
                        android:textColor="#FFFFFF"
                        android:text="123456___"
                        android:id="@+id/txt_answer"
                        />

                </LinearLayout>



            </LinearLayout>


        </ui.ChalkFrameLayout>

        <src.viewes.ViewNumberPad
            android:id="@+id/view_number_pad"
            android:layout_width="match_parent"
            android:layout_height="@dimen/wp80"
            android:layout_margin="@dimen/wp5"
            android:background="@color/trans_half">

        </src.viewes.ViewNumberPad>


    </LinearLayout>
</RelativeLayout>