<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_weight=".15"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="그림의 개수가 몇 개인지 \n세어보고 알맞은 수를 고르세요"
            android:id="@+id/text_discription"
            android:textSize="28sp"
            android:gravity="center"
            android:layout_marginTop="20sp" />

        <GridLayout
            android:layout_weight=".65"
            android:id="@+id/layout_drawfield"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/material_blue_grey_800"
            android:layout_margin="20sp"></GridLayout>

        <LinearLayout
            android:layout_weight=".2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10sp">

            <Button
                android:layout_weight="1"
                android:textSize="32sp"
                android:layout_margin="7sp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="1"
                android:id="@+id/btn_answer_1"/>

            <Button
                android:layout_weight="1"
                android:textSize="32sp"
                android:layout_margin="7sp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="2"
                android:id="@+id/btn_answer_2" />

            <Button
                android:layout_weight="1"
                android:textSize="32sp"
                android:layout_margin="7sp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="3"
                android:id="@+id/btn_answer_3" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>