<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/img_wall">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/wp5"
        android:gravity="center_horizontal">

        <ui.ChalkFrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:gravity="center"
                    android:textSize="@dimen/wp7"
                    android:textColor="#FFFFFF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_discription"
                    android:text="다음 중 짝수를\n찾아서 누르세요."
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/wp60"
                    android:orientation="vertical"
                    android:id="@+id/drawfield"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/wp30"
                        android:orientation="horizontal"
                        android:id="@+id/drawfield_row_1"
                        android:weightSum="1">

                        <FrameLayout
                            android:layout_gravity="center"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".3"
                            android:id="@+id/frame_grid_1_1">
                            <ImageButton
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/round_button"
                                android:background="@null"
                                android:scaleType="fitCenter"
                                android:layout_gravity="center"
                                android:id="@+id/btn_grid_1_1"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:clickable="false"
                                android:textSize="@dimen/wp7"
                                android:textStyle="bold"
                                android:text="(1,1)"
                                android:id="@+id/txt_grid_1_1">
                            </TextView>
                        </FrameLayout>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.1"/>
                        <FrameLayout
                            android:layout_gravity="center"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".3"
                            android:id="@+id/frame_grid_1_2">
                            <ImageButton
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/round_button"
                                android:background="@null"
                                android:scaleType="fitCenter"
                                android:layout_gravity="center"
                                android:id="@+id/btn_grid_1_2"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:clickable="false"
                                android:textSize="@dimen/wp7"
                                android:textStyle="bold"
                                android:text="(1,2)"
                                android:id="@+id/txt_grid_1_2">
                            </TextView>
                        </FrameLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/wp30"
                        android:orientation="horizontal"
                        android:id="@+id/drawfield_row_2"
                        android:weightSum="1">

                        <FrameLayout
                            android:layout_gravity="center"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".3"
                            android:id="@+id/frame_grid_2_1">
                            <ImageButton
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/round_button"
                                android:background="@null"
                                android:scaleType="fitCenter"
                                android:layout_gravity="center"
                                android:id="@+id/btn_grid_2_1"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:clickable="false"
                                android:textSize="@dimen/wp7"
                                android:textStyle="bold"
                                android:text="(2,1)"
                                android:id="@+id/txt_grid_2_1">
                            </TextView>
                        </FrameLayout>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.1"/>
                        <FrameLayout
                            android:layout_gravity="center"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".3"
                            android:id="@+id/frame_grid_2_2">
                            <ImageButton
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/round_button"
                                android:background="@null"
                                android:scaleType="fitCenter"
                                android:layout_gravity="center"
                                android:id="@+id/btn_grid_2_2"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:clickable="false"
                                android:textSize="@dimen/wp7"
                                android:textStyle="bold"
                                android:text="(2,2)"
                                android:id="@+id/txt_grid_2_2">
                            </TextView>
                        </FrameLayout>
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>
        </ui.ChalkFrameLayout>

