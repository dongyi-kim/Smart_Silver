<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_chalkboard_2">

    <LinearLayout
        android:layout_width="@dimen/wp150"
        android:layout_height="@dimen/wp100"
        android:layout_centerInParent="true"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="@dimen/wp70"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/wp5"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="1">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/wp35">

                <FrameLayout
                    android:layout_centerInParent="true"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/wp30">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="#FFFFFFFF"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:weightSum="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <TextView
                                android:id="@+id/txt_fomula"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="00 + 0 - 0 = "
                                android:textSize="@dimen/wp8"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/txt_input_answer"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:background="#FFFFFFFF"
                                android:gravity="center"
                                android:text="00"
                                android:textSize="@dimen/wp8"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>
                </FrameLayout>

                <TextView
                    android:id="@+id/txt_step_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/wp2"
                    android:background="#FF99FF66"
                    android:gravity="center"
                    android:text="10 - 100 - 10"
                    android:textSize="@dimen/wp5" />


            </RelativeLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="@dimen/wp25"
            android:layout_height="@dimen/wp80"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FF000000"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_number_1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="1px"
                    android:layout_weight=".2"
                    android:background="#FFFFFFFF"
                    android:text="1"
                    android:textSize="@dimen/wp10" />

                <Button
                    android:id="@+id/btn_number_4"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="1px"
                    android:layout_weight=".2"
                    android:background="#FFFFFFFF"
                    android:text="4"
                    android:textSize="@dimen/wp10" />

                <Button
                    android:id="@+id/btn_number_7"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="1px"
                    android:layout_weight=".2"
                    android:background="#FFFFFFFF"
                    android:text="7"
                    android:textSize="@dimen/wp10" />

                <Button
                    android:id="@+id/btn_erase"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="1px"
                    android:layout_weight=".2"
                    android:background="#FFFFFFFF"
                    android:text="정정"
                    android:textSize="@dimen/wp10" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/wp25"
            android:layout_height="@dimen/wp80"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FF000000"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_number_2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="1px"
                    android:layout_weight=".2"
                    android:background="#FFFFFFFF"
                    android:text="2"
                    android:textSize="@dimen/wp10" />

                <Button
                    android:id="@+id/btn_number_5"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="1px"
                    android:layout_weight=".2"
                    android:background="#FFFFFFFF"
                    android:text="5"
                    android:textSize="@dimen/wp10" />

                <Button
                    android:id="@+id/btn_number_8"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="1px"
                    android:layout_weight=".2"
                    android:background="#FFFFFFFF"
                    android:text="8"
                    android:textSize="@dimen/wp10" />

                <Button
                    android:id="@+id/btn_number_0"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="1px"
                    android:layout_weight=".2"
                    android:background="#FFFFFFFF"
                    android:text="0"
                    android:textSize="@dimen/wp10" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/wp25"
            android:layout_height="@dimen/wp80"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FF000000"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_number_3"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="1px"
                    android:layout_weight=".2"
                    android:background="#FFFFFFFF"
                    android:text="3"
                    android:textSize="@dimen/wp10" />

                <Button
                    android:id="@+id/btn_number_6"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="1px"
                    android:layout_weight=".2"
                    android:background="#FFFFFFFF"
                    android:text="6"
                    android:textSize="@dimen/wp10" />

                <Button
                    android:id="@+id/btn_number_9"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="1px"
                    android:layout_weight=".2"
                    android:background="#FFFFFFFF"
                    android:text="9"
                    android:textSize="@dimen/wp10" />

                <Button
                    android:id="@+id/btn_submit"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="1px"
                    android:layout_weight=".2"
                    android:background="#FFFFFFFF"
                    android:text="확인"
                    android:textSize="@dimen/wp10" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>