<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/img_chalkboard_2"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="1">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".03" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".49"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".06"
                android:orientation="horizontal"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".05"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight=".6" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight=".4"
                        android:background="#FF223366">
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="2dp"
                            android:layout_marginTop="2dp"
                            android:background="#FFFFFFFF"/>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/txt_step_number"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".35"
                    android:background="#FF99FF66"
                    android:gravity="center"
                    android:text="10 - 100 - 10"
                    android:textSize="@dimen/wp5" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".6"
                    android:orientation="vertical">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight=".6"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight=".4"
                        android:background="#FF223366">
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginRight="2dp"
                            android:layout_marginTop="2dp"
                            android:background="#FFFFFFFF"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".3">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#FF223366" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:background="#FFFFFFFF"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight=".7"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/txt_fomula"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".63"
                            android:gravity="center_vertical|right"
                            android:text="00 + 0 - 0 = "
                            android:textSize="@dimen/wp10"
                            android:textStyle="bold" />

                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".33">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#FF223366" />

                            <TextView
                                android:id="@+id/txt_input_answer"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="2dp"
                                android:background="#FFFFFFFF"
                                android:gravity="center"
                                android:text="00"
                                android:textSize="@dimen/wp12"
                                android:textStyle="bold" />
                        </FrameLayout>
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".1" />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".04" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight=".14"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".8"
                android:background="#FF000000"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_number_1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="2dp"
                    android:layout_weight=".2"
                    android:background="#FFFFFFFF"
                    android:text="1"
                    android:textSize="@dimen/wp10" />

                <Button
                    android:id="@+id/btn_number_4"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight=".2"
                    android:background="#FFFFFFFF"
                    android:text="4"
                    android:textSize="@dimen/wp10" />

                <Button
                    android:id="@+id/btn_number_7"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight=".2"
                    android:background="#FFFFFFFF"
                    android:text="7"
                    android:textSize="@dimen/wp10" />

                <Button
                    android:id="@+id/btn_erase"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight=".2"
                    android:background="#FFFFFFFF"
                    android:text="정정"
                    android:textSize="@dimen/wp10" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight=".14"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".8"
                android:background="#FF000000"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_number_2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight=".2"
                    android:background="#FFFFFFFF"
                    android:text="2"
                    android:textSize="@dimen/wp10" />

                <Button
                    android:id="@+id/btn_number_5"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight=".2"
                    android:background="#FFFFFFFF"
                    android:text="5"
                    android:textSize="@dimen/wp10" />

                <Button
                    android:id="@+id/btn_number_8"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight=".2"
                    android:background="#FFFFFFFF"
                    android:text="8"
                    android:textSize="@dimen/wp10" />

                <Button
                    android:id="@+id/btn_number_0"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight=".2"
                    android:background="#FFFFFFFF"
                    android:text="0"
                    android:textSize="@dimen/wp10" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight=".14"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".8"
                android:background="#FF000000"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_number_3"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight=".2"
                    android:background="#FFFFFFFF"
                    android:text="3"
                    android:textSize="@dimen/wp10" />

                <Button
                    android:id="@+id/btn_number_6"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight=".2"
                    android:background="#FFFFFFFF"
                    android:text="6"
                    android:textSize="@dimen/wp10" />

                <Button
                    android:id="@+id/btn_number_9"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight=".2"
                    android:background="#FFFFFFFF"
                    android:text="9"
                    android:textSize="@dimen/wp10" />

                <Button
                    android:id="@+id/btn_submit"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight=".2"
                    android:background="#FFFFFFFF"
                    android:text="확인"
                    android:textSize="@dimen/wp10" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="@dimen/wp16"
        android:layout_height="@dimen/wp8"
        android:layout_gravity="center"
        android:background="@drawable/img_memo_sticker"
        android:gravity="center"
        android:text="5 - 2"
        android:textSize="@dimen/wp4" />
</RelativeLayout>