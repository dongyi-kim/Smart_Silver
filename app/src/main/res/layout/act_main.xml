<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".actMain"
    android:background="@drawable/img_wall">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="@dimen/wp10">
        
        <LinearLayout
            android:layout_width="@dimen/wp80"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <ui.WhiteChalkFrameLayout
                android:layout_width="@dimen/wp80"
                android:layout_height="@dimen/wp25">
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                    <TextView
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="@dimen/wp10"
                        android:text="시니어 스마트"/>
                </RelativeLayout>

            </ui.WhiteChalkFrameLayout>
            <ImageView
                android:layout_width="@dimen/wp80"
                android:layout_height="@dimen/wp60"
                android:scaleType="centerInside"

                android:src="@drawable/img_chalkboard"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/wp40"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="@dimen/wp10"
            android:layout_marginLeft="@dimen/wp5">

            <ui.RippleView
                android:layout_width="match_parent"
                android:layout_height="@dimen/wp18"
                android:layout_marginBottom="@dimen/wp3"
                android:id="@+id/ripple_learning"
                >
                <ui.MemoFrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:padding="@dimen/wp1">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textSize="@dimen/wp7"
                            android:text="학습하기 "/>
                        <ImageView
                            android:layout_height="match_parent"
                            android:layout_width="@dimen/wp7"
                            android:src="@drawable/icon_pencil_black"/>
                    </LinearLayout>

                </ui.MemoFrameLayout>

            </ui.RippleView>

            <ui.RippleView
                android:layout_width="match_parent"
                android:layout_height="@dimen/wp18"
                android:id="@+id/ripple_my_result"
                android:layout_marginBottom="@dimen/wp3"
                >
                <ui.MemoFrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:padding="@dimen/wp1">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textSize="@dimen/wp7"
                            android:text="학습결과 "/>
                        <ImageView
                            android:layout_alignParentRight="true"
                            android:layout_height="match_parent"
                            android:layout_width="@dimen/wp7"
                            android:src="@drawable/icon_clipboard_black"/>
                    </LinearLayout>

                </ui.MemoFrameLayout>

            </ui.RippleView>

            <ui.RippleView
                android:layout_width="match_parent"
                android:layout_height="@dimen/wp18"
                android:id="@+id/ripple_developer"
                >
                <ui.MemoFrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:padding="@dimen/wp1">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textSize="@dimen/wp7"
                            android:text="개 발 자  "/>
                        <ImageView
                            android:layout_height="match_parent"
                            android:layout_width="@dimen/wp7"
                            android:src="@drawable/icon_setting_black"/>
                    </LinearLayout>

                </ui.MemoFrameLayout>

            </ui.RippleView>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/wp70"
        android:layout_alignParentBottom="true"
        android:gravity="left"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/wp40"
            android:layout_height="match_parent"
            android:src="@drawable/img_char_grandfa"
            />
        <ImageView
            android:layout_width="@dimen/wp40"
            android:layout_height="match_parent"
            android:src="@drawable/img_char_grandma"
            />

    </LinearLayout>




</RelativeLayout>
