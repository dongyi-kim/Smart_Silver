<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/img_chalkboard_2"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="@dimen/wp150"
        android:layout_height="@dimen/wp100"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/txt_discription"
            android:layout_width="match_parent"
            android:layout_height="@dimen/wp20"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:text="아래 그림은 내일의 비올 확률입니다. \n대구지역의 내일 오후 비올 확률은 얼마인지 오른쪽 단추를 누르세요!"
            android:textSize="@dimen/wp5" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/wp80"
            android:background="@drawable/frame_cell_white"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageView
                android:id="@+id/img_6_5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".4"
                android:src="@drawable/map_weather_5_1" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.06"></LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:gravity="center"
                android:weightSum="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".3"
                    android:orientation="horizontal"
                    android:weightSum="1">
                    <Button
                        android:layout_width="0dp"
                        android:layout_weight=".4"
                        android:layout_height="match_parent"
                        android:text="0"
                        android:id="@+id/btn_ans_1"
                        android:textSize="@dimen/wp7"
                        />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".1"></LinearLayout>

                    <Button
                        android:layout_width="0dp"
                        android:layout_weight=".4"
                        android:layout_height="match_parent"
                        android:text="10"
                        android:id="@+id/btn_ans_2"
                        android:textSize="@dimen/wp7"
                        />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="@dimen/wp20"
        android:layout_height="@dimen/wp10"
        android:gravity="center"
