<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_chalkboard_2">

    <LinearLayout
        android:layout_width="@dimen/wp150"
        android:layout_height="@dimen/wp100"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/wp20"
            android:gravity="center"
            android:text=" 서랍 안의 물건이 몇 개인지 숫자를 누르세요."
            android:textColor="#FFFFFFFF"
            android:textSize="@dimen/wp7" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/wp60"
            android:layout_gravity="center"
            android:background="@drawable/frame_cell_white">

            <!-- first frame -->
            <LinearLayout
                android:id="@+id/linear_frame_1_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <View
                        android:id="@+id/view_line_1"
                        android:layout_width="@dimen/wp13"
                        android:layout_height="@dimen/wp1"
                        android:layout_gravity="center_horizontal|top"
                        android:layout_marginLeft="@dimen/wp4"
                        android:layout_marginTop="@dimen/wp15"
                        android:background="#FFAAAAAA" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img_drawer"
                            android:layout_width="@dimen/wp70"
                            android:layout_height="match_parent"
                            android:src="@drawable/img_drawer_floor_1" />

                        <TextView
                            android:id="@+id/txt_answer_description_1"
                            android:layout_width="@dimen/wp50"
                            android:layout_height="@dimen/wp12"
                            android:layout_gravity="top"
                            android:layout_marginTop="@dimen/wp10"
                            android:background="@drawable/my_rounded_corner"
                            android:gravity="center"
                            android:text="수건 5장 2줄"
                            android:textSize="@dimen/wp6" />
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>
            <!-- -->

            <!--second frame -->
            <LinearLayout
                android:id="@+id/linear_frame_4_5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/linear_frame_1_to_3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="@dimen/wp2">

                        <ImageView
                            android:id="@+id/img_display_stand"
                            android:layout_width="@dimen/wp45"
                            android:layout_height="match_parent"
                            android:src="@drawable/img_display_stand_springonion_1" />

                        <TextView
                            android:id="@+id/txt_answer_description_2"
                            android:layout_width="@dimen/wp50"
                            android:layout_height="@dimen/wp12"
                            android:layout_gravity="top"
                            android:layout_marginLeft="@dimen/wp10"
                            android:layout_marginTop="@dimen/wp15"
                            android:background="@drawable/my_rounded_corner"
                            android:gravity="center"
                            android:text="양파 9개 4묶음"
                            android:textSize="@dimen/wp6" />
                    </LinearLayout>

                    <View
                        android:id="@+id/view_line_2"
                        android:layout_width="@dimen/wp14"
                        android:layout_height="@dimen/wp1"
                        android:layout_gravity="center_horizontal|top"
                        android:layout_marginRight="@dimen/wp4"
                        android:layout_marginTop="@dimen/wp22"
                        android:background="#FFAAAAAA" />
                </FrameLayout>
            </LinearLayout>
            <!-- -->
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/wp20"
            android:layout_marginTop="@dimen/wp2"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_answer_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10sp"
                android:layout_weight="1"
                android:text="8장"
                android:textSize="@dimen/wp6"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_answer_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10sp"
                android:layout_weight="1"
                android:text="9장"
                android:textSize="@dimen/wp6"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_answer_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10sp"
                android:layout_weight="1"
                android:text="10장"
                android:textSize="@dimen/wp6"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="@dimen/wp16"
        android:layout_height="@dimen/wp8"
        android:layout_gravity="center"
        android:background="@drawable/img_memo_sticker"
        android:gravity="center"
        android:text="4 - 4"
        android:textSize="@dimen/wp4" />
</RelativeLayout><!-- From: file:/C:/Users/Acka/AndroidStudioProjects/Smart_Silver/app/src/main/res/layout/act_step_04_4.xml -->