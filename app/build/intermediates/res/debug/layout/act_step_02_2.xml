<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/img_chalkboard_2">

    <LinearLayout
        android:layout_centerInParent="true"
        android:layout_width="@dimen/wp150"
        android:layout_height="@dimen/wp100"
        android:orientation="vertical"
        android:gravity="center_horizontal">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/wp15"
        android:text=" 더하기 빼기 O, X 퀴즈\n다음 더하기 빼기가 맞으면 O, 틀리면 X를 누르세요."
        android:id="@+id/txt_discription"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="@dimen/wp5"
        android:gravity="center"/>


        <LinearLayout
            android:layout_width="@dimen/wp120"
            android:layout_height="@dimen/wp40"
            android:layout_margin="@dimen/wp5"
            android:weightSum="5"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:background="@drawable/frame_cell_white"
            android:gravity="center">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="@dimen/wp10"
                android:text="1"
                android:id="@+id/txt_operand_1"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="@dimen/wp10"
                android:text="+"
                android:id="@+id/txt_operator"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="@dimen/wp10"
                android:text="1"
                android:id="@+id/txt_operand_2"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="@dimen/wp10"
                android:text="="
                android:id="@+id/txt_equal_sign"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="@dimen/wp10"
                android:text="2"
                android:id="@+id/txt_answer"/>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/wp30"
            android:weightSum="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:text="O"
                android:textStyle="bold"
                android:textSize="@dimen/wp10"
                android:layout_marginRight="@dimen/wp10"
                android:id="@+id/btn_answer_isRight"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:text="X"
                android:textStyle="bold"
                android:textSize="@dimen/wp10"
                android:id="@+id/btn_answer_isFalse"/>
        </LinearLayout>
    </LinearLayout>


    <TextView
        android:layout_width="@dimen/wp20"
        android:layout_height="@dimen/wp10"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="2 - 2"
        android:background="@drawable/img_memo_sticker"
        android:textSize="@dimen/wp5"/>
</RelativeLayout><!-- From: file:/Users/waps12b/AndroidStudioProjects/Smart_Silver/app/src/main/res/layout/act_step_02_2.xml -->