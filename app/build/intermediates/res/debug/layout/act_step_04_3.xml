<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_chalkboard_2">

    <LinearLayout
        android:layout_width="@dimen/wp150"
        android:layout_height="@dimen/wp100"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/wp20"
            android:gravity="center"
            android:text="장마철을 맞이하여 '물먹는 돼지'를 주문하였습니다.\n모두 몇 개입니까? 알맞은 숫자를 누르세요."
            android:textColor="#FFFFFF"
            android:textSize="@dimen/wp6"
            android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/wp65"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="@dimen/wp5"
                android:layout_marginBottom="@dimen/wp12">
                <LinearLayout
                    android:layout_width="@dimen/wp70"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/background_white_transparent"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/img_hippo"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/wp50"
                        android:scaleType="fitCenter"
                        android:src="@drawable/img_mult_hippo_2_3_2" />
                    <TextView
                        android:id="@+id/txt_answer_description"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/wp15"
                        android:layout_gravity="center"
                        android:background="#FFFFFFFF"
                        android:gravity="center"
                        android:text="2 × 3 × 2"
                        android:textSize="@dimen/wp7" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/wp50"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/wp10"
                    android:orientation="vertical"
                    android:gravity="center">
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/wp18"
                        android:layout_margin="10sp"
                        android:text="6"
                        android:textSize="@dimen/wp9"
                        android:id="@+id/btn_answer_1"/>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/wp18"
                        android:layout_margin="10sp"
                        android:text="8"
                        android:textSize="@dimen/wp9"
                        android:id="@+id/btn_answer_2"/>
                </LinearLayout>
            </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="@dimen/wp16"
        android:layout_height="@dimen/wp8"
        android:layout_gravity="center"
        android:background="@drawable/img_memo_sticker"
        android:gravity="center"
        android:text="4 - 3"
        android:textSize="@dimen/wp4" />
</RelativeLayout><!-- From: file:/C:/Users/Acka/AndroidStudioProjects/Smart_Silver/app/src/main/res/layout/act_step_04_3.xml -->