                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="@dimen/wp6"
                        android:id="@+id/txt_answer_1"/>
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
