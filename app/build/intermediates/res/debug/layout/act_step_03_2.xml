<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_chalkboard_2">

    <LinearLayout
        android:layout_width="@dimen/wp150"
        android:layout_height="@dimen/wp100"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_discription"
            android:layout_width="match_parent"
            android:layout_height="@dimen/wp10"
            android:gravity="center"
            android:text="다음 네모 안에 알맞은 수를 찾아 순서대로 누르세요."
            android:textColor="#FFFFFF"
            android:textSize="@dimen/wp6"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/wp70"
            android:layout_gravity="center"
            android:layout_margin="@dimen/wp5"
            android:background="@drawable/frame_cell_white"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="1">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/wp25"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <FrameLayout
                    android:id="@+id/frame_process_1"
                    android:layout_width="@dimen/wp30"
                    android:layout_height="match_parent"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/img_process_1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@null"
                        android:scaleType="fitCenter"
                        android:src="@drawable/process_to_next" />
                    <TextView
                        android:id="@+id/txt_process_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/wp2"
                        android:layout_gravity="center"
                        android:text="+1"
                        android:textStyle="bold"
                        android:textSize="@dimen/wp5"/>
                </FrameLayout>

                <TextView
                    android:layout_width="@dimen/wp5"
                    android:layout_height="match_parent"/>

                <FrameLayout
                    android:id="@+id/frame_process_2"
                    android:layout_width="@dimen/wp30"
                    android:layout_height="match_parent"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/img_process_2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@null"
                        android:scaleType="fitCenter"
                        android:src="@drawable/process_to_next" />
                    <TextView
                        android:id="@+id/txt_process_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/wp2"
                        android:text="+2"
                        android:textStyle="bold"
                        android:textSize="@dimen/wp5"/>
                </FrameLayout>

                <TextView
                    android:layout_width="@dimen/wp5"
                    android:layout_height="match_parent"/>

                <FrameLayout
                    android:id="@+id/frame_process_3"
                    android:layout_width="@dimen/wp30"
                    android:layout_height="match_parent"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/img_process_3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@null"
                        android:scaleType="fitCenter"
                        android:src="@drawable/process_to_next" />

                    <TextView
                        android:id="@+id/txt_process_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/wp2"
                        android:layout_gravity="center"
                        android:text="+3"
                        android:textStyle="bold"
                        android:textSize="@dimen/wp5"/>
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/wp10"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="1">

                <FrameLayout
                    android:id="@+id/frame_answer_1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="top"
                    android:layout_weight=".15">

                    <ImageView
                        android:id="@+id/img_answer_sapace_1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@null"
                        android:scaleType="fitCenter"
                        android:src="@drawable/empty_square_space" />

                    <TextView
                        android:id="@+id/txt_answer_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="1"
                        android:textSize="@dimen/wp5"
                        android:textStyle="bold" />
                </FrameLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".08" />

                <FrameLayout
                    android:id="@+id/frame_answer_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight=".15">

                    <ImageView
                        android:id="@+id/img_answer_sapace_2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@null"
                        android:scaleType="fitCenter"
                        android:src="@drawable/empty_square_space" />

                    <TextView
                        android:id="@+id/txt_answer_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="1"
                        android:textSize="@dimen/wp5"
                        android:textStyle="bold" />
                </FrameLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".08" />

                <FrameLayout
                    android:id="@+id/frame_answer_3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight=".15">

                    <ImageView
                        android:id="@+id/img_answer_sapace_3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@null"
                        android:scaleType="fitCenter"
                        android:src="@drawable/empty_square_space" />

                    <TextView
                        android:id="@+id/txt_answer_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="1"
                        android:textSize="@dimen/wp5"
                        android:textStyle="bold" />
                </FrameLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".08" />

                <FrameLayout
                    android:id="@+id/frame_answer_4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight=".15">

                    <ImageView
                        android:id="@+id/img_answer_sapace_4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@null"
                        android:scaleType="fitCenter"
                        android:src="@drawable/empty_square_space" />

                    <TextView
                        android:id="@+id/txt_answer_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="1"
                        android:textSize="@dimen/wp5"
                        android:textStyle="bold" />
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/wp10"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1">

            <Button
                android:id="@+id/btn_answer_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".25"
                android:text="1"
                android:textStyle="bold"
                android:textSize="@dimen/wp5" />

            <Button
                android:id="@+id/btn_answer_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".25"
                android:text="2"
                android:textStyle="bold"
                android:textSize="@dimen/wp5"/>

            <Button
                android:id="@+id/btn_answer_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".25"
                android:text="3"
                android:textStyle="bold"
                android:textSize="@dimen/wp5"/>
        </LinearLayout>
    </LinearLayout>
