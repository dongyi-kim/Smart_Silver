<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_chalkboard_2">

    <LinearLayout
        android:layout_width="@dimen/wp150"
        android:layout_height="@dimen/wp100"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_description"
            android:layout_width="match_parent"
            android:layout_height="@dimen/wp20"
            android:gravity="center"
            android:text="아래 빈 항아리가 있습니다. 빈 항아리를 채우려면 옆의 그릇으로 몇 번 부어야 하는지 알맞은 숫자를 누르세요."
            android:textColor="#FFFFFF"
            android:textSize="@dimen/wp6"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/wp60"
            android:layout_gravity="center"
            android:background="@drawable/frame_cell_white"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="@dimen/wp50"
                android:layout_height="@dimen/wp50"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_gravity="center">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/wp10"
                    android:layout_gravity="right"
                    android:scaleType="fitXY"
                    android:src="@drawable/arrow_pot_small_to_big" />
                <ImageButton
                    android:id="@+id/ibtn_pot_small"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/wp25"
                    android:paddingRight="@dimen/wp15"
                    android:background="@null"
                    android:scaleType="fitCenter"
                    android:src="@drawable/pot_small" />
                <TextView
                    android:id="@+id/txt_pot_small_capacity"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/wp12"
                    android:paddingRight="@dimen/wp15"
                    android:gravity="center"
                    android:text="1L"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/wp7"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/wp60"
                android:layout_height="@dimen/wp50"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/img_pot_big"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".75"
                    android:background="@null"
                    android:scaleType="fitCenter"
                    android:src="@drawable/pot_0_percent" />

                <TextView
                    android:id="@+id/txt_pot_big_capacity"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight=".2"
                    android:text="12L"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/wp7"
                    android:textStyle="bold" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/wp20"
            android:layout_marginTop="@dimen/wp2"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_answer_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10sp"
                android:layout_weight="1"
                android:text="1"
                android:textSize="@dimen/wp7"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_answer_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10sp"
                android:layout_weight="1"
                android:text="2"
                android:textSize="@dimen/wp7"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_answer_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10sp"
                android:layout_weight="1"
                android:text="3"
                android:textSize="@dimen/wp7"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="@dimen/wp16"
        android:layout_height="@dimen/wp8"
        android:layout_gravity="center"
        android:background="@drawable/img_memo_sticker"
        android:gravity="center"
        android:text="5 - 3"
        android:textSize="@dimen/wp4" />
</RelativeLayout><!-- From: file:/C:/Users/Acka/AndroidStudioProjects/Smart_Silver/app/src/main/res/layout/act_step_05_3.xml -->