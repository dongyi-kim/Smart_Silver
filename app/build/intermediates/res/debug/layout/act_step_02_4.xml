<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/img_chalkboard_2">
    <LinearLayout
        android:layout_width="@dimen/wp150"
        android:layout_height="@dimen/wp100"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/wp15"
            android:layout_marginBottom="@dimen/wp5"
            android:text="더하기 빼기를 이용하여 수 만들기.\n□ 안에 알맞은 수를 찾아 누르세요."
            android:id="@+id/txt_discription"
            android:textSize="@dimen/wp6"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="20sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/wp40"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center">

            <FrameLayout
                android:layout_width="@dimen/wp25"
                android:layout_height="@dimen/wp25"
                android:id="@+id/frame_number_1">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/frame_cell_pink"
                    android:id="@+id/img_operand_field_1"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="1"
                    android:textSize="@dimen/wp10"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:id="@+id/txt_operand_1"/>
            </FrameLayout>

            <TextView
                android:layout_width="@dimen/wp10"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="+"
                android:textSize="@dimen/wp10"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:id="@+id/txt_operator_1"/>

            <FrameLayout
                android:layout_width="@dimen/wp25"
                android:layout_height="@dimen/wp25"
                android:id="@+id/frame_number_2">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/frame_cell_pink"
                    android:id="@+id/img_operand_field_2"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="1"
                    android:textSize="@dimen/wp10"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:id="@+id/txt_operand_2"/>
            </FrameLayout>

            <TextView
                android:layout_width="@dimen/wp10"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="+"
                android:textSize="@dimen/wp10"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:id="@+id/txt_operator_2"/>

            <FrameLayout
                android:layout_width="@dimen/wp25"
                android:layout_height="@dimen/wp25"
                android:id="@+id/frame_number_3">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/frame_cell_pink"
                    android:id="@+id/img_operand_field_3"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="1"
                    android:textSize="@dimen/wp10"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:id="@+id/txt_operand_3"/>
            </FrameLayout>

            <TextView
                android:layout_width="@dimen/wp10"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="="
                android:textSize="@dimen/wp10"
                android:textColor="#FFFFFF"
                android:textStyle="bold"/>

            <FrameLayout
                android:layout_width="@dimen/wp25"
                android:layout_height="@dimen/wp25"
                android:id="@+id/frame_number_4">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/frame_cell_pink"
                    android:id="@+id/img_answer_field"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="1"
                    android:textSize="@dimen/wp10"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:id="@+id/txt_answer"/>
            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/wp40"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">
            <Button
                android:layout_width="@dimen/wp30"
                android:layout_height="@dimen/wp30"
                android:layout_margin="@dimen/wp5"
                android:text="1"
                android:textSize="@dimen/wp10"
                android:textStyle="bold"
                android:id="@+id/btn_answer_1"/>


            <Button
                android:layout_width="@dimen/wp30"
                android:layout_height="@dimen/wp30"
                android:layout_margin="@dimen/wp5"
                android:text="1"
                android:textSize="@dimen/wp10"
                android:textStyle="bold"
                android:id="@+id/btn_answer_2"/>

            <Button
                android:layout_width="@dimen/wp30"
                android:layout_height="@dimen/wp30"
                android:layout_margin="@dimen/wp5"
                android:text="1"
                android:textSize="@dimen/wp10"
                android:textStyle="bold"
                android:id="@+id/btn_answer_3"/>
        </LinearLayout>
    </LinearLayout>


    <TextView
        android:layout_width="@dimen/wp20"
        android:layout_height="@dimen/wp10"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="2 - 4"
        android:background="@drawable/img_memo_sticker"
        android:textSize="@dimen/wp5"/>
