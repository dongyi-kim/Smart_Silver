                    <ImageView
                        android:id="@+id/img_picture_1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/wp50"
                        android:scaleType="fitCenter"
                        android:src="@drawable/img_mult_songpyeon_4_1" />
                    <TextView
                        android:id="@+id/txt_answer_1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/wp15"
                        android:layout_gravity="center"
                        android:background="#FFFFFFFF"
                        android:gravity="center"
                        android:text="1접시 1,000원"
                        android:textSize="@dimen/wp6" />
                </LinearLayout>
            </FrameLayout>

            <View
                android:layout_width="@dimen/wp15"
                android:layout_height="match_parent"/>
            <FrameLayout
                android:layout_width="@dimen/wp60"
